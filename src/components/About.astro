            :root {
                --primary-dark: #011126;
                --primary-blue: #0568a6;
                --primary-light: #0fb2f2;
                --background: #f2f2f2;
                --text-dark: #0d0d0d;
                --white: #ffffff;
            }

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: "Inter", sans-serif;
                background-color: var(--background);
                color: var(--text-dark);
                line-height: 1.6;
                overflow-x: hidden;
            }

            .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 0 20px;
            }

            /* Navigation */
            .navbar {
                position: fixed;
                top: 0;
                width: 100%;
                background: rgba(
                    1,
                    17,
                    38,
                    0.7
                ); /* Increased transparency with lower opacity */
                backdrop-filter: blur(
                    10px
                ); /* Retained blur for glass effect */
                z-index: 1000;
                padding: 15px 0;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            }

            .nav-container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 0 20px;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .nav-logo {
                display: flex;
                align-items: center;
                gap: 10px;
                font-size: 1.5rem;
                font-weight: 700;
                color: var(
                    --white
                ); /* White for contrast against transparent dark background */
            }

            .nav-logo i {
                color: var(--primary-light);
            }

            .nav-back-btn {
                display: flex;
                align-items: center;
                gap: 8px;
                background: linear-gradient(
                    135deg,
                    var(--primary-blue),
                    var(--primary-light)
                );
                color: var(--white);
                border: none;
                padding: 12px 20px;
                border-radius: 25px;
                font-weight: 500;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .nav-back-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(5, 104, 166, 0.3);
            }

            /* Hero Section */
            .hero-section {
                min-height: 100vh;
                position: relative;
                display: flex;
                align-items: center;
                overflow: hidden;
            }

            .hero-video {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                z-index: 1;
            }

            .hero-overlay {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgb(1, 17, 38);
                z-index: 2;
            }

            .hero-content {
                position: relative;
                z-index: 3;
                max-width: 1200px;
                margin: 0 auto;
                padding: 0 20px;
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 60px;
                align-items: center;
            }

            .hero-title {
                font-size: 4rem;
                font-weight: 800;
                color: var(--white);
                margin-bottom: 20px;
                line-height: 1.1;
            }

            .hero-subtitle {
                display: flex;
                align-items: center;
                gap: 15px;
                font-size: 1.5rem;
                color: var(--white);
                margin-bottom: 30px;
            }

            .logo-icon {
                width: 50px;
                height: 50px;
                background: var(--primary-light);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                color: var(--white);
                font-size: 1.2rem;
            }

            .hero-description {
                font-size: 1.2rem;
                color: rgba(255, 255, 255, 0.8);
                margin-bottom: 40px;
            }

            .hero-visual {
                height: 400px;
            }

            /* Section Headers */
            .section-header {
                text-align: center;
                margin-bottom: 60px;
            }

            .section-badge {
                background: var(--primary-light);
                color: var(--white);
                padding: 8px 20px;
                border-radius: 25px;
                font-size: 0.9rem;
                font-weight: 600;
                display: inline-block;
                margin-bottom: 20px;
            }

            .section-header h2,
            .section-header h3 {
                font-size: 2.5rem;
                font-weight: 700;
                color: var(--primary-dark);
                margin-bottom: 15px;
            }

            .section-header p {
                font-size: 1.1rem;
                color: rgba(13, 13, 13, 0.7);
                max-width: 600px;
                margin: 0 auto;
            }

            /* About Description */
            .about-description {
                padding: 120px 0;
                background: var(--white);
            }

            .description-text {
                max-width: 800px;
                margin: 0 auto 60px;
                text-align: center;
            }

            .description-text p {
                font-size: 1.1rem;
                line-height: 1.8;
                margin-bottom: 25px;
                color: rgba(13, 13, 13, 0.8);
            }

            .stats-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 40px;
                margin-top: 60px;
            }

            .stat-item {
                text-align: center;
                padding: 30px;
                background: var(--background);
                border-radius: 15px;
                transition: all 0.3s ease;
            }

            .stat-item:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(5, 104, 166, 0.1);
            }

            .stat-number {
                font-size: 3rem;
                font-weight: 800;
                color: var(--primary-blue);
                margin-bottom: 10px;
            }

            .stat-label {
                font-size: 1.1rem;
                color: var(--text-dark);
                font-weight: 500;
            }

            /* Experience Section */
            .experience-section {
                padding: 120px 0;
                background: var(--background);
            }

            .experience-content {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 80px;
                align-items: center;
            }

            .experience-text .section-header {
                text-align: left;
                margin-bottom: 30px;
            }

            .experience-text p {
                font-size: 1.1rem;
                line-height: 1.8;
                color: rgba(13, 13, 13, 0.8);
                margin-bottom: 40px;
            }

            .experience-highlights {
                display: flex;
                flex-direction: column;
                gap: 20px;
            }

            .highlight-item {
                display: flex;
                align-items: center;
                /* gap: 15px; */
                height: 5vh;
                width: 30vw;
                border-left: 3px solid var(--primary-light);
                padding-left: 20px;
                font-weight: 500;
            }

