            .collage-container {
                position: relative;
                cursor: pointer;
                border-radius: 20px;
                overflow: hidden;
                transition: all 0.3s ease;
            }

            .collage-container:hover {
                transform: scale(1.02);
                box-shadow: 0 15px 40px rgba(5, 104, 166, 0.2);
            }

            .collage-grid {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 10px;
                padding: 20px;
                background: var(--white);
                border-radius: 20px;
            }

            .collage-item {
                height: 120px;
                background: linear-gradient(
                    135deg,
                    var(--primary-blue),
                    var(--primary-light)
                );
                border-radius: 10px;
                position: relative;
                overflow: hidden;
            }

            .collage-item::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(
                    45deg,
                    transparent 30%,
                    rgba(255, 255, 255, 0.1) 50%,
                    transparent 70%
                );
                animation: shimmer 3s infinite;
            }

            @keyframes shimmer {
                0% {
                    transform: translateX(-100%);
                }
                100% {
                    transform: translateX(100%);
                }
            }

            .collage-overlay {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(1, 17, 38, 0.8);
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                color: var(--white);
